                        }
                    },
                    "400": {
                        "description": "Dados inválidos"
                    }
                }
            }
        },
        "/casos/{id}": {
            "get": {
                "summary": "Obter caso por ID",
                "description": "Retorna um caso específico pelo seu ID.",
                "tags": [
                    "Casos"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Caso encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Caso"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Caso não encontrado"
                    }
                }
